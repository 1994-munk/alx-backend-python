pipeline {
    agent any

    environment {
        // ✅ Replace with your actual Jenkins credentials ID
        GITHUB_CREDENTIALS = 'github-creds'
    }

    stages {
        stage('Checkout Code') {
            steps {
                // ✅ Pull code from GitHub
                git branch: 'main',
                    credentialsId: "${GITHUB_CREDENTIALS}",
                    url: 'https://github.com/1994-munk/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                // ✅ Explicitly mention messaging_app/requirements.txt
                sh '''
                pip3 install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running pytest...'
                // ✅ Run pytest inside the messaging_app directory
                sh '''
                cd messaging_app
                pytest --junitxml=report.xml
                '''
            }
        }

        stage('Archive Test Report') {
            steps {
                // ✅ Collect test report from the subfolder
                junit 'messaging_app/report.xml'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed ✅'
        }
    }
}
