pipeline {
    agent any

    environment {
        // ðŸ‘‡ Replace this with your actual Jenkins credentials ID (from Manage Jenkins â†’ Credentials)
        GITHUB_CREDENTIALS = 'github-creds'
    }

    stages {
        stage('Checkout Code') {
            steps {
                // âœ… Pulls code from your GitHub repo using credentials
                git branch: 'main',
                    credentialsId: "${GITHUB_CREDENTIALS}",
                    url: 'https://github.com/1994-munk/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                // âœ… Installing pytest + any required packages
                sh '''
                cd messaging_app
                pip3 install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running pytest...'
                // âœ… Run tests and generate a simple test report
                sh '''
                cd messaging_app
                pytest --junitxml=report.xml
                '''
            }
        }

        stage('Archive Test Report') {
            steps {
                // âœ… Save the test results to Jenkins
                junit 'messaging_app/report.xml'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished! âœ…'
        }
    }
}
